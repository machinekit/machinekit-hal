    hal/utils/meter.c \
    hal/utils/miscgtk.c

USERSRCS += $(HALMETERSRCS)

# FIXME in Focal, gtk2 headers contain deprecated declarations
$(call TOOBJS, $(HALMETERSRCS)): CFLAGS += -Wno-deprecated-declarations

../bin/halmeter: \
		$(call TOOBJS, $(HALMETERSRCS)) \
		../lib/libhal.so.0 \
		../lib/libhalulapi.so.0
	$(ECHO) Linking $(notdir $@)
	$(Q)$(CC) $(LDFLAGS) -o $@ $^  $(GTK_LIBS)
TARGETS += ../bin/halmeter

HALSCOPESRCS := \
    hal/utils/scope.c \
    hal/utils/scope_horiz.c \
    hal/utils/scope_vert.c \
    hal/utils/scope_trig.c \
